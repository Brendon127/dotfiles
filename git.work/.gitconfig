[commit]
	gpgsign = true
[core]
	editor = 'nvim' 
[mergetool]
	keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[alias]
	setup = ! "git init; git add .; git commit -m 'Initial Commit'"
	mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
[color]
	ui = auto
[cola]
	spellcheck = false
[init]
	defaultBranch = main
[pull]
	rebase = false
[gpg]
	program = /usr/local/MacGPG2/bin/gpg
